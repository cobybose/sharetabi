<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffa500"
    tools:context="to.msn.wings.mapbasic.MapsActivity">

    <!-- ツールバー -->
    <android.support.v7.widget.Toolbar
        android:id="@+id/Toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/colorPrimary">

        <!-- 位置情報の記録を開始するスイッチ -->
        <fragment
            android:id="@+id/SwitchFragment"
            android:name="com.example.android.sample.myplaceapp.location.LoggingSwitchFragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            tools:layout="@layout/fragment_logging_switch" />

    </android.support.v7.widget.Toolbar>

    <android.support.v4.widget.DrawerLayout
        android:id="@+id/DrawerLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/Toolbar">

        <RelativeLayout
            android:id="@+id/MainContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- 地図のフラグメントを入れるコンテナ -->
            <FrameLayout
                android:id="@+id/map"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="match_parent"
                android:layout_height="300dp"/>

            <!-- 写真ギャラリーを入れるコンテナ -->
            <FrameLayout
                android:id="@+id/GalleryContainer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/MapContainer" />


            <Button
                android:id="@+id/camera_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="camera button" />

            <!-- カメラフラグメントを入れるコンテナ -->
            <FrameLayout
                android:id="@+id/CameraContainer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:elevation="8dp" />

        </RelativeLayout>

    </android.support.v4.widget.DrawerLayout>

</RelativeLayout>